@page
@model aspnetcoreapp.Pages.Account.ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<h1>Confirm Email</h1>

@if (Model.IsEmailConfirmed)
{
    <p>Your email has been successfully confirmed. You can now log in.</p>
    <a asp-page="/Account/Login">Go to Login</a>
}
else
{
    <p>There was an error confirming your email. Please try again.</p>
}